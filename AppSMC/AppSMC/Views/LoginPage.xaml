<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSMC.Views.LoginPage"
             BackgroundColor="#fff">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="30" Spacing="40">
            <BoxView HeightRequest="10"/>
            <Image HorizontalOptions="Center" WidthRequest="300" Source="logo.png"/>
            <Frame BackgroundColor="#e5e5e5" HasShadow="False">
                <StackLayout Orientation="Vertical" Spacing="10">
                    <Entry x:Name="Email" Text="" Placeholder="Username"   
                           PlaceholderColor="#293846" HeightRequest="40"   
                           Keyboard="Email"  
                           TextColor="#293846"/>
                    <Entry x:Name="Password" Text="" Placeholder="Password"   
                           PlaceholderColor="#293846" HeightRequest="40"   
                           IsPassword="True"  
                           TextColor="#293846"/>
                </StackLayout>
            </Frame>
            <Button Text="Login" TextColor="White"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#1CC09F"
                    BorderRadius="10"
                    Clicked="btnLogin_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>