<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSMC.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label x:Name="NameCourse" Text="O gerente de projeto II" FontSize="14" TextColor="#838486" FontAttributes="Bold" HorizontalTextAlignment="Center" HorizontalOptions="Center" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <Image Source="ico.png" HorizontalOptions="Center" />
        </StackLayout>

        <Button Text="DOWNLOAD CLASSROOM MATERIALS"
                BackgroundColor="#bd2026"
                TextColor="#ffffff"
                BorderRadius="10"
                HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>